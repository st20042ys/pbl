{
    "compilerOptions": {
        "strict": true,
        "allowUnusedLabels": false,
        "allowUnreachableCode": false,
        "exactOptionalPropertyTypes": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noPropertyAccessFromIndexSignature": true,
        "noUncheckedIndexedAccess": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "isolatedModules": true,
        "checkJs": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "target": "es2021",
        "composite": true,
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "outDir": "./dist",
        "baseUrl": "./"
    },
    "files": [
        "./src/main.ts",
        "./src/app/app.module.ts",
        "./src/common/constant/injectToken.ts",
        "./src/common/decorator/role.decorator.ts",
        "./src/common/dto/enum.ts",
        "./src/common/paypay/paypay.module.ts",
        "./src/common/paypay/paypay.service.ts",
        "./src/common/paypay/paypay.type.ts",
        "./src/common/supabase/supabase.module.ts",
        "./src/common/supabase/supabase.service.ts",
        "./src/config/environments/env.module.ts",
        "./src/config/environments/env.service.ts",
        "./src/config/environments/validator.ts",
        "./src/guard/auth/auth.guard.ts",
        "./src/guard/auth/auth.module.ts",
        "./src/infra/prisma/prisma.module.ts",
        "./src/infra/prisma/prisma.service.ts",
        "./src/modules/locker/domain/locker.domain.ts",
        "./src/modules/locker/interface/ILockerRepository.ts",
        "./src/modules/menu/menu.controller.ts",
        "./src/modules/menu/menu.module.ts",
        "./src/modules/menu/menu.repository.ts",
        "./src/modules/menu/menu.use-case.ts",
        "./src/modules/menu/domain/menu.domain.ts",
        "./src/modules/menu/dto/menu.enum.ts",
        "./src/modules/menu/interface/IMenuRepository.ts",
        "./src/modules/order/order.controller.ts",
        "./src/modules/order/order.module.ts",
        "./src/modules/order/order.repository.ts",
        "./src/modules/order/order.use-case.ts",
        "./src/modules/order/domain/order.domain.ts",
        "./src/modules/order/dto/order.enum.ts",
        "./src/modules/order/dto/order.type.ts",
        "./src/modules/order/interface/IOrderRepository.ts",
        "./src/modules/payment/payment.module.ts",
        "./src/modules/payment/payment.repository.ts",
        "./src/modules/payment/payment.use-case.ts",
        "./src/modules/payment/domain/payment.domain.ts",
        "./src/modules/payment/dto/payment.enum.ts",
        "./src/modules/payment/interface/IPaymentRepository.ts",
        "./src/modules/user/user.controller.ts",
        "./src/modules/user/user.module.ts",
        "./src/modules/user/user.repository.ts",
        "./src/modules/user/user.use-case.ts",
        "./src/modules/user/domain/user.domain.ts",
        "./src/modules/user/interface/IUserRepository.ts",
        "./test/app.e2e-spec.ts",
        "./prisma/seed.ts"
    ],
    "include": [
        "./src/**/*",
        "./test/**/*",
        "./prisma/*.ts",
        "./*.*ts"
    ],
    "exclude": [
        "./dist"
    ]
}
